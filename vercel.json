{
  "version": 2,
  "builds": [
    {
      "src": "server.prod.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.prod.js"
    },
    {
      "src": "/",
      "dest": "public/index.html"
    },
    {
      "src": "/home",
      "dest": "public/home.html"
    },
    {
      "src": "/chat",
      "dest": "public/chat.html"
    },
    {
      "src": "/text-to-image",
      "dest": "public/text-to-image.html"
    },
    {
      "src": "/image-to-image",
      "dest": "public/image-to-image.html"
    },
    {
      "src": "/speech-to-text",
      "dest": "public/speech-to-text.html"
    },
    {
      "src": "/settings",
      "dest": "public/settings.html"
    },
    {
      "src": "/styles.css",
      "dest": "public/styles.css"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 